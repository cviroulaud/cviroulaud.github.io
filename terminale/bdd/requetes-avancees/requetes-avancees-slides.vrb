SELECT Bandes_dessinees.titre FROM Bandes_dessinees
JOIN Emprunts
    ON Bandes_dessinees.isbn = Emprunts.isbn
JOIN Emprunteurs
    ON Emprunts.id_emprunteurs = Emprunteurs.id
WHERE Emprunteurs.nom = "Dupont"
ORDER BY Bandes_dessinees.titre;
